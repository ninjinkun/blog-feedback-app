{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "lib": [
      "es6",
      "es5",
      "dom"
    ],
    "allowJs": false,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "./build/dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDirs": [
      "./src",
      "./types"
    ],
    "types": [
      "react",
      "react-dom"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
